rotocol":0,"is_bookmarked":0,"can_be_copied":1,"can_remove_fork":1,"forks_count":{"private":0,"public":0},"access":{"can_view":1,"can_remove":0,"can_add":0,"can_edit":0,"can_publish":0,"can_get_doi":0,"can_share":1,"can_move":1,"can_move_outside":1,"can_transfer":1,"can_download":1,"is_locked":0},"guid":"149036F00DC711EAA7EA958D8EAB3179","steps":[{"id":851188,"guid":"72D359B00DCA11EA803939B3EBF9C00B","previous_id":null,"previous_guid":null,"modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"BC7ABCEB20924905AA8E67E41821EBD0","order_id":1,"type_id":6,"title":"Section","source":{"title":"Prepare stock solutions"}},{"id":1054724,"guid":"F6793F7F868340AA85EFAB466D527BAE","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\"><span style = \"font-weight:bold;\">3% citric acid: <\/span><span>Add 3g citric acid into 100mL distilled water at a pH of around 2.0.<\/span><\/div><div class = \"text-block\"><span style = \"font-weight:bold;\">2X SSC: <\/span><span>Add 17.6g NaCl and 8.8g Na3C6H5O7\u20222H2O into 1000mL distilled water.<\/span><\/div><div class = \"text-block\"><span style = \"font-weight:bold;\">0.5X SSC: <\/span><span>Add 100mL 2X SSC into 300mL distilled water.<\/span><\/div><div class = \"text-block\"><span style = \"font-weight:bold;\">0.2X SSC: <\/span><span>Add 30mL 2X SSC into 270mL distilled water.<\/span><\/div><div class = \"text-block\"><span style = \"font-weight:bold;\">20% glycerin: <\/span><span>Add 20mL glycerin into 80mL distilled water.<\/span><\/div><div class = \"text-block\"><span style = \"font-weight:bold;\">0.5M PBS: <\/span><span>Add 30g NaCl, 6g of Na2HPO4 \u2022 12H2O, and 0.4g NaH2PO4 \u2022 2H2O into 1000mL distilled water. Adjust pH to 7.2-7.6.<\/span><\/div><\/div>"}}],"cases":[],"data":null,"section":null,"section_color":"#A492FF","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":851205,"guid":"B7DAB4E00DCA11EA803939B3EBF9C00B","previous_id":851207,"previous_guid":"807958600DD611EA9188D1E7BD05AF23","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"AC09F0A3B7294EF28DC760E915186A83","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"4BE01E604C2A422BAF9BC9AA6E54F747","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Mix 30% H2O2 with CH3OH in the ratio of 1: 50. Deal the slide with the mixture at room temperature for 30 minutes to inactivate Endogenousperoxidase and wash with distilled water.<\/div><\/div>"}}],"cases":[],"data":null,"section":null,"section_color":"","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":851207,"guid":"807958600DD611EA9188D1E7BD05AF23","previous_id":851188,"previous_guid":"72D359B00DCA11EA803939B3EBF9C00B","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"52282251606144A58157E73BB8C28A3D","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"C5C8102173184E4E9D8C05387545FC8B","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Prepare samples by paraffin sectioning.<\/div><\/div>"}}],"cases":[],"data":null,"section":null,"section_color":"","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":851208,"guid":"C9D652100DD611EA9188D1E7BD05AF23","previous_id":851205,"previous_guid":"B7DAB4E00DCA11EA803939B3EBF9C00B","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"6778B73D08E84E859E9CEFFFFBC6E004","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"DCBC04CFFFD141EE89B32E4FD2761990","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Exposure the fragments of mRNA nucleic acid. Pipette Pepsin that is diluted by 3% citric acid (Mix completely 1mL 30% citric acid with two drops of concentrated Pepsin) and digest at 37\u00b0C or room temperature for 3-30 minutes. Wash with 0.5M PBS 3 times for 5 minutes. (Adjustable according to the thickness of the visual specimen, old and new)<\/div><\/div>"}}],"cases":[],"data":null,"section":null,"section_color":"","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":851209,"guid":"293880C00DD711EA9188D1E7BD05AF23","previous_id":851208,"previous_guid":"C9D652100DD611EA9188D1E7BD05AF23","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"6E3CA9495DCB4BA0A744CE76EEE3FB85","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"1DCC8178ED91463A8D03128A85C44D44","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Prehybridization: Preparation for wet box\u2014Add 40mL of 20% glycerin to the bottom of the dry hybridization chamber to keep moist. Apply 20 \u00b5l of prehybridization solution per sample in each slide. Incubate at 37\u00b0C incubator for 3 hours. Absorb excess liquid and do not wash.<\/div><\/div>"}}],"cases":[],"data":null,"section":null,"section_color":"","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":851210,"guid":"83D649900DD711EA9188D1E7BD05AF23","previous_id":851209,"previous_guid":"293880C00DD711EA9188D1E7BD05AF23","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"A222C79B0AF4485FB8FF7A4F293E5FCD","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"B72D7A2E5AF74137983939E543A6EB92","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Hybridization: dilute digoxin-labeled oligonucleotide probe with hybridization diluent solution at a concentration of typically 0.5-2 \u03bcg\/ml. Apply 60 ng of the mixing solution per sample in each slide. Remove the protective film of the coverslip specialized for in situ hybridization and place it on the slide. Hybridize overnight at 37\u00b0C incubator.<\/div><\/div>"}}],"cases":[],"data":null,"section":null,"section_color":"","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":851211,"guid":"37E2D1100DD811EA9188D1E7BD05AF23","previous_id":851212,"previous_guid":"7F4448E00DD811EA9188D1E7BD05AF23","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"4C26E837BD6541CFA0501E6D57FC7EED","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"4661928F7AEB418F97A80038AF363DCD","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Wash: remove the coverslip and wash twice with 37\u00b0C 2X SSC for 5 minutes; wash once with 0.5X SSC for 15 minutes; wash once with 0.2X SSC for 15 minutes (Repeat as necessary).<\/div><\/div>"}}],"cases":[],"data":null,"section":null,"section_color":"","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":851212,"guid":"7F4448E00DD811EA9188D1E7BD05AF23","previous_id":851210,"previous_guid":"83D649900DD711EA9188D1E7BD05AF23","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"F3A19EDC4B2344D39961A7CBAD4B66E9","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"7D85C81C4E9940278AD32F66DAC06EBC","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Stand the slide from step 6 on 37\u00b0C  2X SSC, let the coverslip fall off naturally. A gentle vibration is allowed if necessary.<\/div><\/div>"}}],"cases":[],"data":null,"section":null,"section_color":"","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":851213,"guid":"9CD2B3A00DD911EA9188D1E7BD05AF23","previous_id":851211,"previous_guid":"37E2D1100DD811EA9188D1E7BD05AF23","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"822306BF5D614B0F8A8814283992A1E2","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"69706F164DB54CD197DCEA24DE7B2BAC","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Blocking: add blocking solution and blocking at 37\u00b0C for 30 minutes. Discard excess liquid and do not wash.<\/div><\/div>"}}],"cases":[],"data":null,"section":null,"section_color":"","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":851214,"guid":"D81572900DD911EA9188D1E7BD05AF23","previous_id":851213,"previous_guid":"9CD2B3A00DD911EA9188D1E7BD05AF23","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"5F5828A17F3445AAAD92E04EB1AC8F9B","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"0F036CBF9FE640A089C11A3F01CDB654","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Add Biotinylated Mouse Anti-Digoxin: at 37\u00b0C for 1 hour or room temperature for 120 minutes. Wash 4 times with 0.5M PBS for 5 minutes. Do not wash with other buffers and distilled water.<\/div><\/div>"}}],"cases":[],"data":null,"section":null,"section_color":"","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":851215,"guid":"E32023600DD911EA9188D1E7BD05AF23","previous_id":851214,"previous_guid":"D81572900DD911EA9188D1E7BD05AF23","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"2CFB509C602643518B14B19B37FDE8AF","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"3556195244B74469AA2518B08533803E","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Add SABC: at 37\u00b0C for 20 minutes. Wash 3 times with 0.5M PBS for 5 minutes. Do not wash with other buffers and distilled water.<\/div><\/div>"}}],"cases":[],"data":null,"section":null,"section_color":"","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":851216,"guid":"F90637A00DD911EA9188D1E7BD05AF23","previous_id":851215,"previous_guid":"E32023600DD911EA9188D1E7BD05AF23","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"BB1DF09A50DA49D6B7FFDD95E1D37A34","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"E84AEB326BDE49699ABC3F972E99A434","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Add Biotinylated Peroxidase: at 37\u00b0C for 20 minutes. Wash 4 times with 0.5M PBS for 5 minutes.<\/div><\/div>"}}],"cases":[],"data":null,"section":null,"section_color":"","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":851217,"guid":"1C638FE00DDA11EA9188D1E7BD05AF23","previous_id":851216,"previous_guid":"F90637A00DD911EA9188D1E7BD05AF23","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"5D3A09EA74CB4FBCA61C33E9A647002D","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"3640CAA894874FD7B986F5996150EA9C","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Color development: use DAB Chromogenic Substrate Kit (Catalog Number: AR1025) \u2014add one drop(50\u03bcL) Reagent A (DAB Chromogen Concentrate), one drop (50\u03bcL) Reagent B (H2O2 Concentrate) and one drop(50\u03bcL) Reagent C (TBS buffer Concentrate) to 1mL distilled water and mix well. Then add the mixture to the specimen. Control color development under a microscope within 30 minutes. Continue to develop if there is no staining background. Wash the slide well with water.<\/div><\/div>"}}],"cases":[],"data":null,"section":null,"section_color":"","section_duration":0,"critical":null,"critical_id":null,"dura