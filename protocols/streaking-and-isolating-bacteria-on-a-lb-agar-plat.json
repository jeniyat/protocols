d":1,"can_edit":0,"can_publish":0,"can_get_doi":0,"can_share":1,"can_move":1,"can_move_outside":1,"can_transfer":1,"can_download":1,"is_locked":0},"guid":"23984F40F19B11E99D09796447EEE3F7","steps":[{"id":828564,"guid":"525E1340F19C11E99D09796447EEE3F7","previous_id":null,"previous_guid":null,"modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"74B1081CD7DC41C0B0F3EC1FE133FD60","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"BB2D5792203C4FF3870B539DBBFDBF64","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Obtain an LB agar plate with appropriate antibiotic if any.<\/div><\/div>"}}],"cases":[],"data":null,"section":null,"section_color":"","critical":null,"critical_id":null,"duration":0},{"id":828565,"guid":"525EFDA0F19C11E99D09796447EEE3F7","previous_id":828564,"previous_guid":"525E1340F19C11E99D09796447EEE3F7","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"D0D8D086A749458581832F32B4AAE256","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"1543C38B8F4C431E8211CB29BD2FDE08","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Label the bottom of the plate with the strain name and the date. It is also a good idea to add the antibiotic resistance (if any) and your initials.<\/div><\/div>"}}],"cases":[],"data":null,"section":null,"section_color":"","critical":null,"critical_id":null,"duration":0},{"id":828566,"guid":"525F99E0F19C11E99D09796447EEE3F7","previous_id":828565,"previous_guid":"525EFDA0F19C11E99D09796447EEE3F7","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"F207B1B54B344C3CB68D85D7298DDDC4","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"931BF244A8374B6B913B486AC59FFA1A","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Sterilize your lab bench by spraying it down with 70% ethanol and wiping it down with a paper towel. Maintain sterility by working near a flame or bunsen burner.<\/div><\/div>"}}],"cases":[],"data":null,"section":null,"section_color":"","critical":null,"critical_id":null,"duration":0},{"id":828567,"guid":"5260D260F19C11E99D09796447EEE3F7","previous_id":828566,"previous_guid":"525F99E0F19C11E99D09796447EEE3F7","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"AA70448FECEA496A9DB52BE35BAE1583","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"06236FEC44E34A3DA44F564F65A87CAF","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Find the bacteria of interest from the bacterial stock database and obtain the appropriate glycerol stock from the -80C freezer (Freezer 6- Bacterial Stock box)<\/div><\/div>"}}],"cases":[],"data":null,"section":null,"section_color":"","critical":null,"critical_id":null,"duration":0},{"id":828568,"guid":"5261BCC0F19C11E99D09796447EEE3F7","previous_id":828567,"previous_guid":"5260D260F19C11E99D09796447EEE3F7","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"D19664E5972C48F098DB55D6BC3BBA2C","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"A7F91B9B893040AFAE70FCC5D42C2F9F","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Using a sterile pipette tip touch the top of the glycerol stock to obtain the bacteria on the tip<\/div><\/div>"}}],"cases":[],"data":null,"section":null,"section_color":"","critical":null,"critical_id":null,"duration":0},{"id":828569,"guid":"A59AD250F19C11E99D09796447EEE3F7","previous_id":828568,"previous_guid":"5261BCC0F19C11E99D09796447EEE3F7","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"31AB354D12DD49518D7E0C42441DC78C","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"01297E809A0542D6AA873598A20E2672","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Gently spread the bacteria over a section of the plate, as shown in the diagram below, to create streak #1<\/div><div class = \"text-block\">Using a fresh, sterile pipette tip, drag through streak #1 and spread the bacteria over a second section of the plate, to create streak #2<\/div><div class = \"text-block\">Using a third sterile pipette tip, drag through streak #2 and spread the bacteria over the last section of the plate, to create streak #3<\/div><div class = \"text-block\">The repeated streaking is done to dilute the bacteria and obtain single colonies.<\/div><div style = \"text-align :; float : ;\"><img style = \"\" src = \"https:\/\/s3.amazonaws.com\/protocols-files\/public\/bff09da62904587ef28bc633ab06d0e330c40e309a76231b7d5d7c4b1d402ebc\/bsmh3npn.png\" \/><\/div><div style = \"text-align :; float : ;\"><img style = \"\" src = \"https:\/\/s3.amazonaws.com\/protocols-files\/public\/bff09da62904587ef28bc633ab06d0e330c40e309a76231b7d5d7c4b1d402ebc\/bsmi3npn.png\" \/><\/div><\/div>"}},{"id":1054725,"guid":"6D6933CE462546C2AF77726670DB3365","order_id":2,"type_id":1,"title":"description","source":{"description":"<div style = \"text-align :; float : ;\"><img style = \"\" src = \"https:\/\/s3.amazonaws.com\/protocols-files\/public\/bff09da62904587ef28bc633ab06d0e330c40e309a76231b7d5d7c4b1d402ebc\/bsmh3npn.png\" \/><\/div>"}},{"id":1054726,"guid":"2A060AD2823D4E35A21945E036AE8E99","order_id":3,"type_id":1,"title":"description","source":{"description":"<div style = \"text-align :; float : ;\"><img style = \"\" src = \"https:\/\/s3.amazonaws.com\/protocols-files\/public\/bff09da62904587ef28bc633ab06d0e330c40e309a76231b7d5d7c4b1d402ebc\/bsmi3npn.png\" \/><\/div>"}}],"cases":[],"data":null,"section":null,"section_color":"","critical":null,"critical_id":null,"duration":0},{"id":828570,"guid":"1596BAB0F19D11E99D09796447EEE3F7","previous_id":828569,"previous_guid":"A59AD250F19C11E99D09796447EEE3F7","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"75FB7677D2A94CD686FF6A45114BC545","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"793B0A33EE31483A858B4C5259E8799F","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Incubate the plate (lid side down) with the newly plated bacteria overnight (generally 12-18 hours) at the appropriate growth temperature for the particular strain. In case of antibiotic resistant plasmids, incubation should not exceed the recommended duration as it poses risk of the bacteria metabolising the antibiotic.<\/div><\/div>"}}],"cases":[],"data":null,"section":null,"section_color":"","critical":null,"critical_id":null,"duration":0},{"id":828571,"guid":"2B0CA800F19D11E99D09796447EEE3F7","previous_id":828570,"previous_guid":"1596BAB0F19D11E99D09796447EEE3F7","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"3F96BF2EB2694B8CB327EEB6409D3E99","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"ECC5D657C775412B9EA224ECD665E2F9","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Following adequate incubation, single colonies should be visible. A single colony should look like a white dot growing on the solid medium. This dot is composed of millions of genetically identical bacteria that arose from a single bacterium. If the bacterial growth is too dense and you do not see single colonies, re-streak onto a new agar plate to obtain single colonies.<\/div><\/div>"}}],"cases":[],"data":null,"section":null,"section_color":"","critical":null,"critical_id":null,"duration":0},{"id":828572,"guid":"5E5D4B50F19E11E99D09796447EEE3F7","previous_id":828571,"previous_guid":"2B0CA800F19D11E99D09796447EEE3F7","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"B957FE3BA5B74F5DA1E782382E12A553","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"91C50F6FCE1B448D90D79EED73FEAD51","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Store the streaked plates at 4C (lid side down to avoid condensation falling on the single colonies). The streaked plates can be used for up to a month to make liquid cultures.<\/div><\/div>"}}],"cases":[],"data":null,"section":null,"section_color":"","critical":null,"critical_id":null,"duration":0}],"document":null,"materials":[],"description":"<div class = \"text-blocks\"><div class = \"text-block\">Follow this protocol if you have a glycerol stock of the bacteria of interest and want to isolate an individual clonal population (single colony) of bacteria from this stock. Using a single colony from a freshly streaked agar plate to inoculate a bacterial culture for DNA purification will minimize the chance of having a mixture of plasmids in your purified DNA. This protocol explains how to isolate a single bacterial colony by streaking it onto a LB agar plate.<\/div><div class = \"text-block\">This is a general protocol for streaking bacteria on LB plate and the following parameters need to be mentioned of a specific type of bacterial streaking:<\/div><div class = \"text-block\">1. Name of the bacterial strain<\/div><div class = \"text-block\">2. Growth temperature<\/div><div class = \"text-block\">3. Incubation time <\/div><div class = \"text-block\">4. Antibiotic resistance (if any)<\/div><div class = \"text-block\">5. Rpm of the shaking incubator<\/div><\/div>","changed_on":1571400132}