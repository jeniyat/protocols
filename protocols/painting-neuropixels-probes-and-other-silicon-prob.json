can_transfer":1,"can_download":1,"is_locked":0},"guid":"8890A087B9DA11E99CA40242AC110005","steps":[{"id":696209,"guid":"68D79230145311E9A4B1FBA49086165B","previous_id":null,"previous_guid":null,"modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"BC0BAF6F39554DC2979B02E8F46A3059","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"2805F8DD73844E868C4C509E3E676CFC","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Secure Neuropixels probes (shown) or other silicon probes onto a micromanipulator. The side with eletrode sites should face up. <\/div><\/div>"}}],"cases":[],"data":null,"section":null,"section_color":"","critical":null,"critical_id":null,"duration":0},{"id":696210,"guid":"68F33080145311E9A4B1FBA49086165B","previous_id":696209,"previous_guid":"68D79230145311E9A4B1FBA49086165B","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"231B066E71C047F9B33CF449D9CDEEE4","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"F5834F1DE7274E3A83C7622EEDAA9F3B","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Secure a microscope slide onto a holder, and a clean coverslip at the end of the microscope slide. Place the coverslip attached to the microscope slide near to the Neuropixels probe (2-3 mm).<\/div><\/div>"}}],"cases":[],"data":null,"section":null,"section_color":"","critical":null,"critical_id":null,"duration":0},{"id":696211,"guid":"68F35790145311E9A4B1FBA49086165B","previous_id":696210,"previous_guid":"68F33080145311E9A4B1FBA49086165B","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"B5A2653E65D9423DA69250EC465BBACD","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"055448B96E154D6EA77A47B469C50658","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Using a micropipette, place 1 \u00b5L of CM-DiI solution close to the edge of the coverslip.To ensure a consistent labeling of the probe, make sure the pipette does not produce an air bubble in the drop of dye. The dye concentration should be 1 \u00b5g\/\u00b5L CM-DiI in ethanol. The drop of dye will evaporate in ~30 s at room temperature, so it is important to complete step 4 quickly.<\/div><\/div>"}}],"cases":[],"data":null,"section":null,"section_color":"","critical":null,"critical_id":null,"duration":0},{"id":696212,"guid":"68F35791145311E9A4B1FBA49086165B","previous_id":696211,"previous_guid":"68F35790145311E9A4B1FBA49086165B","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"D5FE40DC10BF44D8989AA2CAE883F7B6","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"B1D68303738E409FB6C52B2F7D2B1771","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">This step should be done under a microscope. Using the micromanipulator, dip the tip of the Neuropixels probe into the dye. Be careful not to get dye onto the electrode sites. For Neuropixels probes, the tip extends only about 150 \u00b5m from the first electrode site (see photo).<\/div><div style = \"text-align :; float : ;\"><img style = \"\" src = \"https:\/\/s3.amazonaws.com\/pr-journal\/bbspa.png\" \/><\/div><div class = \"text-block\"> The electrodes sites should be visible under the microscope. The experimenter should be familar with the setup to comfortably complete this step in considerably less than 30 s.<\/div><\/div>"}},{"id":1054725,"guid":"8F5B3C4AAE364C90AD88B4042976EDA8","order_id":2,"type_id":1,"title":"description","source":{"description":"<div style = \"text-align :; float : ;\"><img style = \"\" src = \"https:\/\/s3.amazonaws.com\/pr-journal\/bbspa.png\" \/><\/div>"}}],"cases":[],"data":null,"secti